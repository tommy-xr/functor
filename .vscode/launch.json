    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/fable-raytracer.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Node.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/src/main.js",
            "runtimeArgs": ["--experimental-modules"],
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Rust",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build"
                ]
            },
            "program": "${cargo:program}",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}